generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Slam {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  message String
  UserId  String @db.ObjectId
  User    User   @relation(fields: [UserId], references: [id])
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name String

  email String @unique

  password String

  created_at DateTime @default(now())

  slams Slam[]
}
